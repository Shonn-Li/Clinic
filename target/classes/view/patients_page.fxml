<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.clinic.controller.PatientPageController">
   <center>
      <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="name" prefWidth="70.0" text="Name" />
          <TableColumn fx:id="age" prefWidth="37.0" text="Age" />
          <TableColumn fx:id="recentPayment" prefWidth="118.0" text="Recent Payment" />
          <TableColumn fx:id="visited" prefWidth="88.0" text="Visited" />
          <TableColumn fx:id="currentTreatmentPlan" prefWidth="173.0" text="Current Treatment Plan" />
          <TableColumn fx:id="remainingTreatment" prefWidth="113.0" text="remain treatement" />
        </columns>
      </TableView>
   </center>
   <top>
      <HBox prefHeight="53.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="searchBarInput" prefHeight="37.0" prefWidth="239.0" HBox.hgrow="ALWAYS">
               <promptText>Search...</promptText>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="newBtn" mnemonicParsing="false" prefWidth="30.0" text="N">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="deleteBtn" mnemonicParsing="false" text="D">
               <HBox.margin>
                  <Insets right="10.0" top="15.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="editBtn" mnemonicParsing="false" text="E">
               <HBox.margin>
                  <Insets right="10.0" top="15.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </top>
</BorderPane>
