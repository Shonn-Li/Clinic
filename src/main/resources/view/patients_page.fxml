<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.clinic.controller.PatientPageController">
   <top>
      <TextField fx:id="searchBarInput" BorderPane.alignment="CENTER">
         <promptText>Search...</promptText>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
         </BorderPane.margin>
      </TextField>
   </top>
   <center>
      <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="name" prefWidth="70.0" text="Name" />
          <TableColumn fx:id="age" prefWidth="37.0" text="Age" />
          <TableColumn fx:id="recentPayment" prefWidth="118.0" text="Recent Payment" />
          <TableColumn fx:id="visited" prefWidth="88.0" text="Visited" />
          <TableColumn fx:id="currentTreatmentPlan" prefWidth="173.0" text="Current Treatment Plan" />
          <TableColumn fx:id="remainingTreatment" prefWidth="113.0" text="remain treatement" />
        </columns>
      </TableView>
   </center>
</BorderPane>
